{
  "name": "typographics",
  "version": "1.0.0",
  "description": "typographics provides flexible and adaptive styles for typography on web pages. This package allows you to automate the resizing of fonts based on screen width, ensuring good readability on any device.",
  "author": "ux-ui.pro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ux-ui-pro/typographics.git"
  },
  "bugs": {
    "url": "https://github.com/ux-ui-pro/typographics/issues"
  },
  "css": "dist/index.css",
  "targets": {
    "css": {
      "source": "src/index.scss"
    }
  },
  "scripts": {
    "clean": "rm -rf dist .parcel-cache",
    "build": "yarn clean && parcel build",
    "lint:scss": "stylelint **/*.scss",
    "lintfix": "yarn lint:scss --fix"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "devDependencies": {
    "@parcel/transformer-sass": "2.12.0",
    "parcel": "^2.12.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-selector-bem-pattern": "^4.0.0"
  },
  "keywords": [
    "typography",
    "responsive",
    "adaptive",
    "font",
    "size",
    "scaling",
    "variables",
    "sass",
    "scss",
    "css",
    "viewport",
    "clamp",
    "dynamic",
    "balance",
    "smoothing",
    "rendering",
    "optimization",
    "design",
    "modern",
    "utilities",
    "accessibility"
  ]
}
